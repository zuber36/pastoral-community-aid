rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Donation commitments (public readable, write allowed)
    match /artifacts/{appId}/public/data/donation_commitments/{docId} {
      allow read;
      allow write: if true;
    }

    // Public project updates
    match /artifacts/{appId}/public/data/project_updates/{docId} {
      allow read;
      allow write: if true;
    }

    // Contact messages (private)
    match /artifacts/{appId}/users/{userId}/volunteer_interests/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
